        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/btn_read"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="deconnexion"
                android:background="#1B2EFF"
                tools:srcCompat="@drawable/read" />
            <ImageView
                android:id="@+id/btn_deco"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="deconnexion"
                android:background="#2D5BFF"
                tools:srcCompat="@drawable/deconnexion" />

            <ImageView
                android:id="@+id/btn_write"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:onClick="write"
                android:padding="10dp"
                android:background="#2D5BFF"
                tools:srcCompat="@drawable/write" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>