<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="Connectez-vous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=""
        android:id="@+id/validation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Adresse ip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="192.168.10.130"
            android:id="@+id/edt_ip"
            />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:inputType="number"
                    android:text="Rack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/edt_rack"
                    android:text="0"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:inputType="number"
                        android:text="Slot"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/edt_slot"
                        android:text="2"
                        />
                 </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Desccription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_description"
            />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            >
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:onClick="save"
            android:text="Save"
            />
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:onClick="connexion"
            android:text="Connexion"
            />
        </LinearLayout>

        <include layout="@layout/list_address_layout" />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lst_automate"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

    </LinearLayout>

</LinearLayout>